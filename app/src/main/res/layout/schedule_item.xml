<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_background">

    <LinearLayout
        android:id="@+id/layoutSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_round_secondary"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutScheduleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:paddingLeft="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewWeekday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shadow_oval"
                    android:gravity="center"
                    android:paddingEnd="2dp"
                    android:paddingBottom="2dp"
                    android:text="M"
                    android:textAlignment="center"
                    android:textColor="@color/text" />

                <ImageView
                    android:id="@+id/imageViewCustom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0"
                    android:background="@drawable/shadow_oval_custom"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/calendar_favorite"
                    app:tint="@color/light" />

                <TextView
                    android:id="@+id/textViewDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:text="Weekday" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageViewClockIcon"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/time_clock_circle"
                    app:tint="@color/light" />

                <Button
                    android:id="@+id/buttonDate"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="0dp"
                    android:text="Date"
                    android:textAllCaps="false"
                    android:textColor="@color/light" />

                <ImageView
                    android:id="@+id/imageViewHourIcon"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/hourglass"
                    app:tint="@color/light" />

                <Spinner
                    android:id="@+id/spinnerHour"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:paddingStart="0dp"
                    android:paddingEnd="24dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextInfo"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/item_input"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Test text"
                android:theme="@style/CustomSpinnerTheme" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewCheck"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_weight="0"
        android:background="@drawable/item_round_primary"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutSchedule"
        app:layout_constraintStart_toStartOf="@+id/layoutSchedule"
        app:layout_constraintTop_toTopOf="@+id/layoutSchedule"
        app:srcCompat="@drawable/check_circle"
        app:tint="@color/light" />

</androidx.constraintlayout.widget.ConstraintLayout>